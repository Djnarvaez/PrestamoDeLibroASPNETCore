@model IEnumerable<Autor>
@{
    ViewData["Title"] = "Index";
}
<div class="card" style="margin-top:30px">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-list-ul"></i>&nbsp;Lista de Autores
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" asp-controller="Autor" class="btn btn-primary btn-sm text-white"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model.Count() > 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                                <th>@Html.DisplayNameFor(x => x.Nacionalidad)</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x => item.Nombre)</td>
                                    <td>@Html.DisplayFor(x => item.Nacionalidad)</td>
                                    <td style="width:100px">
                                        <partial name="_TableButtonPartial" model="item.IdAutor" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            }
            else
            {
                <p>No hay registro en base de datos...</p>
            }
        </div>
    </div>
</div>
